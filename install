#!/bin/bash
set -euo pipefail
IFS=$'\n\t'

export UPGRADE="no"
export APP_GROUPS=(cli database dev gui)

for var in "$@"
do
  if [[ "$var" = "--upgrade" ]]; then
    export UPGRADE="yes"
  elif [[ "$var" = "--server" ]]; then
    APP_GROUPS=(cli)
  fi
done

export LOG_FILE=$(mktemp)
function write-log {
  if [[ $? -gt 0 ]]; then
    cat "$LOG_FILE"
  fi
}
trap write-log EXIT

if [[ "$UPGRADE" = "yes" ]]; then
  echo "Syncing packages..."
  sudo apt update -y >> "$LOG_FILE" 2>&1
  sudo apt upgrade -y >> "$LOG_FILE" 2>&1
fi

PREVIOUS_PWD="$(pwd)"

for APP_GROUP in "${APP_GROUPS[@]}"; do
  for APP in $(ls "apps/$APP_GROUP/"); do
    cd $(mktemp -d)
    echo "Syncing $APP_GROUP/$APP..."
    $PREVIOUS_PWD/apps/$APP_GROUP/$APP >> "$LOG_FILE" 2>&1
    cd "$PREVIOUS_PWD"
  done
done
